<LosingMenuWidget>:
    canvas:
        Color:
            rgba: .8, .8, .8, .5
        Rectangle:
            size: self.size

    Image:
        source: "assets/title.png"
        pos_hint: {"center_x": .5, "center_y": .8}

    Label:
        text: "G A M E    O V E R"
        font_size: dp(80)
        size_hint: .7, .4
        pos_hint: {"center_x": .5, "center_y": .5}
        bold: True
        underline: True
        color: [0, 0, 0, 4]

    Button:
        text: "R E S T A R T"
        font_size: dp(60)
        size_hint: .5, .3
        pos_hint: {"center_x": .5, "center_y": .25}
        background_normal: ""
        background_color: 1, 1, 1, 0.1
        on_press: root.parent.reset()
